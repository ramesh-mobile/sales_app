<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="4dp"
    android:elevation="16dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Shop Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/margin_normal_xxxx"
            app:layout_constraintEnd_toStartOf="@+id/ivOption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivOption"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvShopName"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"/>


        <com.sr.salesmanapp.ui.base.BaseSpinner
            android:id="@+id/spinnerOption"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvShopName"
            android:entries="@array/list_option"/>

        <TextView
            android:id="@+id/tvOwnerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/margin_normal_xxxx"
            android:text="Owner Name"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/ivOption"
            app:layout_constraintStart_toStartOf="@+id/tvShopName"
            app:layout_constraintTop_toBottomOf="@+id/tvShopName" />

        <TextView
            android:id="@+id/tvPhoneOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Phone 1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tvOwnerName"
            app:layout_constraintTop_toBottomOf="@+id/tvOwnerName" />

        <TextView
            android:id="@+id/tvPhoneTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Phone 2"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivPhoneOne"
            app:layout_constraintTop_toTopOf="@+id/tvPhoneOne" />

        <ImageView
            android:id="@+id/ivPhoneOne"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhoneOne"
            app:layout_constraintStart_toEndOf="@+id/tvPhoneOne"
            app:layout_constraintTop_toTopOf="@+id/tvPhoneOne"
            app:srcCompat="@drawable/ic_baseline_call_24"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/ivPhoneTwo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPhoneTwo"
            app:layout_constraintStart_toEndOf="@+id/tvPhoneTwo"
            app:layout_constraintTop_toTopOf="@+id/tvPhoneTwo"
            app:srcCompat="@drawable/ic_baseline_call_24"
            app:tint="@color/green" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="Address"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/margin_normal_xxxx"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivAddress"
            app:layout_constraintStart_toStartOf="@+id/tvPhoneOne"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneOne" />

        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvAddress"
            app:layout_constraintEnd_toStartOf="@id/ivShare"
            app:layout_constraintTop_toTopOf="@+id/tvAddress"
            app:srcCompat="@drawable/ic_baseline_map_24"
            app:tint="@color/blue" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAddress"
            app:srcCompat="@drawable/ic_baseline_share_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>